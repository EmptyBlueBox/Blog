---
import { cn } from '@/utils'

interface Props {
  class?: string
  sponsors: {
    name: string
    amount: string
    date: string
  }[]
}
const { class: className, sponsors, ...props } = Astro.props
---

<div class={cn('mx-auto w-full max-w-full', className)} {...props}>
  <div class='grid gap-3.5 sm:grid-cols-2 sm:gap-4 lg:grid-cols-3'>
    {
      sponsors.map((sponsor) => (
        <article class='flex h-full flex-col gap-3 rounded-xl border border-border/60 bg-background/40 p-4 text-sm transition-colors hover:border-foreground/40 dark:border-border/40 dark:bg-background/30'>
          <div class='flex items-center justify-between gap-4'>
            <p class='text-base font-semibold text-foreground'>{sponsor.name}</p>
            <span class='text-base font-semibold text-foreground'>{sponsor.amount}</span>
          </div>
          <div class='text-muted-foreground'>
            <span>Donated on </span>
            <time class='text-foreground'>{sponsor.date}</time>
          </div>
        </article>
      ))
    }
  </div>
</div>
