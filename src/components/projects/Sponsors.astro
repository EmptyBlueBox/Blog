---
import { cn } from '@/utils'

interface Props {
  class?: string
  sponsors: {
    name: string
    amount: string
    date: string
  }[]
}
const { class: className, sponsors, ...props } = Astro.props
---

<div class={cn('mx-auto w-full max-w-full', className)} {...props}>
  <div class='grid gap-4 sm:grid-cols-2 lg:grid-cols-3'>
    {
      sponsors.map((sponsor) => (
        <div class='group relative overflow-hidden rounded-2xl border bg-white/50 p-6 shadow-sm backdrop-blur-sm transition-all duration-300 hover:scale-[1.02] hover:shadow-xl dark:bg-gray-900/50'>
          <div class='flex flex-col space-y-3'>
            <div class='flex items-center justify-between'>
              <h3 class='font-semibold text-gray-900 dark:text-gray-100'>{sponsor.name}</h3>
              <div class='heart-container relative flex items-center justify-center'>
                {/* 外层光圈效果 */}
                <div class='absolute inset-0 rounded-full bg-gradient-to-r from-pink-400 via-red-400 to-rose-400 opacity-20 blur-sm transition-all duration-300 group-hover:scale-110 group-hover:opacity-40' />

                {/* 主要背景 */}
                <div class='relative flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-pink-100 via-red-50 to-rose-100 shadow-lg transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl dark:from-pink-900/30 dark:via-red-900/30 dark:to-rose-900/30'>
                  {/* 内层渐变背景 */}
                  <div class='absolute inset-1 rounded-full bg-gradient-to-br from-pink-50 to-red-50 dark:from-pink-900/20 dark:to-red-900/20' />

                  {/* 心形图标 */}
                  <div class='relative z-10 transition-all duration-300 group-hover:scale-110'>
                    <svg
                      class='h-6 w-6 fill-current text-red-500 transition-colors duration-300 group-hover:text-red-600 dark:text-red-400 dark:group-hover:text-red-300'
                      viewBox='0 0 24 24'
                    >
                      <path d='M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z' />
                    </svg>
                  </div>

                  {/* 闪烁效果 */}
                  <div class='absolute inset-0 rounded-full bg-gradient-to-r from-transparent via-white/30 to-transparent opacity-0 transition-opacity duration-1000 group-hover:animate-pulse group-hover:opacity-100' />
                </div>
              </div>
            </div>
            <div class='space-y-1'>
              <div class='flex items-center justify-between text-sm'>
                <span class='text-muted-foreground'>Amount:</span>
                <span class='font-medium text-green-600 dark:text-green-400'>{sponsor.amount}</span>
              </div>
              <div class='flex items-center justify-between text-sm'>
                <span class='text-muted-foreground'>Date:</span>
                <span class='text-gray-600 dark:text-gray-400'>{sponsor.date}</span>
              </div>
            </div>
          </div>
          {/* 改进的整体hover背景效果 */}
          <div class='absolute inset-0 rounded-2xl bg-gradient-to-br from-pink-400/5 via-red-400/5 to-rose-400/10 opacity-0 transition-all duration-300 group-hover:opacity-100' />

          {/* 添加边框光效 */}
          <div class='absolute inset-0 rounded-2xl border border-transparent bg-gradient-to-r from-pink-400/20 via-red-400/20 to-rose-400/20 opacity-0 transition-opacity duration-300 group-hover:opacity-100' />
        </div>
      ))
    }
  </div>
</div>
