<style>
  .animated-signature {
    opacity: 0;
    animation: fadeInSignature 2s ease-in 1s forwards;
  }

  .signature-svg {
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.1));
    transition: all 0.3s ease;
  }

  .signature-svg:hover {
    filter: drop-shadow(0 4px 16px rgba(0, 0, 0, 0.15));
    transform: scale(1.02);
  }

  .signature-path {
    stroke: #4a5568;
    stroke-width: 1.5px;
    fill: transparent;
    stroke-dasharray: 3500;
    stroke-dashoffset: 3500;
    animation: drawSignature 8s ease-in-out 2s infinite;
  }

  @keyframes fadeInSignature {
    to {
      opacity: 1;
    }
  }

  @keyframes drawSignature {
    0% {
      /* 绘制 */
      stroke-dashoffset: 3500;
      fill: transparent;
    }
    45% {
      stroke-dashoffset: 1000;
      fill: transparent;
    }
    50% {
      fill: transparent;
    }
    60% {
      stroke-dashoffset: 0;
      fill: #4a5568;
    }
    65% {
      fill: #4a5568;
    }
    75% {
      /* 擦除完成 */
      stroke-dashoffset: 3500;
      fill: transparent;
    }
    100% {
      /* 保持擦除状态 */
      stroke-dashoffset: 3500;
      fill: transparent;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .signature-path {
      stroke: #cbd5e0;
    }

    .signature-path {
      animation: drawSignatureDark 8s ease-in-out 2s infinite;
    }

    @keyframes drawSignatureDark {
      0% {
        stroke-dashoffset: 3500;
        fill: transparent;
      }
      45% {
        stroke-dashoffset: 1000;
        fill: transparent;
      }
      50% {
        fill: transparent;
      }
      60% {
        stroke-dashoffset: 0;
        fill: #cbd5e0;
      }
      65% {
        fill: #cbd5e0;
      }
      75% {
        /* 擦除完成 */
        stroke-dashoffset: 3500;
        fill: transparent;
      }
      100% {
        /* 保持擦除状态 */
        stroke-dashoffset: 3500;
        fill: transparent;
      }
    }
  }

  /* Responsive sizing */
  @media (max-width: 768px) {
    .signature-svg {
      width: 300px;
      height: 75px;
    }
  }

  @media (min-width: 769px) {
    .signature-svg {
      width: 400px;
      height: 100px;
    }
  }
</style>
