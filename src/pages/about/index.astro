      const imageSources = profiles.map((p) => p.src)
      const getRandomIndex = (excludeIndex = null) => {
        if (imageSources.length <= 1) {
          return 0
        }
        let nextIndex
        do {
          nextIndex = Math.floor(Math.random() * imageSources.length)
        } while (nextIndex === excludeIndex)
        return nextIndex
      }
      let currentIndex = Number.isInteger(defaultIndex) ? defaultIndex : 0

      if (profileImage && imageSources.length > 0) {
        profileImage.src = imageSources[currentIndex]

        window.addEventListener('load', () => {
          imageSources.forEach((src, index) => {
            if (index !== currentIndex) {
              const img = new Image()
              img.src = src
            }
          })
        })

        profileImage.addEventListener('click', () => {
          profileImage.style.opacity = '0'
          setTimeout(() => {
            currentIndex = getRandomIndex(currentIndex)
            profileImage.src = imageSources[currentIndex]
            profileImage.style.opacity = '1'
          }, 300)
        })
      }
