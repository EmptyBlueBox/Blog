      <p class='image-caption'>
        Guess what? <Spoiler>Click the image to change it!</Spoiler>
      </p>
    </div>
    <script is:inline define:vars={{ profiles: allProfiles, initialProfile: initialProfile }}>
      const profileImage = document.getElementById('profile-image')
      const imageSources = profiles.map((p) => p.src)
      let currentIndex = profiles.findIndex((p) => p.src === initialProfile.src)

      window.addEventListener('load', () => {
        profiles.forEach((profile, index) => {
          if (index !== currentIndex) {
            const img = new Image()
            img.src = profile.src
          }
        })
      })

      if (profileImage) {
        profileImage.addEventListener('click', () => {
          profileImage.style.opacity = '0'
          setTimeout(() => {
            if (imageSources.length > 1) {
              const oldIndex = currentIndex
              do {
                currentIndex = Math.floor(Math.random() * imageSources.length)
              } while (currentIndex === oldIndex)
            }
            profileImage.src = imageSources[currentIndex]
            profileImage.style.opacity = '1'
          }, 300)
        })
      }
    </script>
