---
import PageLayout from '@/layouts/BaseLayout.astro'
import { Button } from '@/components/user'

const meta = {
  description: 'Page not found',
  title: '404 - Oops, Lost in Space!'
}

// Random fun messages
const funnyMessages = [
  "Oops! This page is on vacation.",
  "Oh no! This page is playing hide and seek...",
  "Whoops! Page abducted by aliens!",
  "This page went on an adventure!",
  "404 - Page lost in the digital universe"
];

const randomMessage = funnyMessages[Math.floor(Math.random() * funnyMessages.length)];
---

<PageLayout {meta}>
  <div class='px-4 py-10 text-center sm:px-6 lg:px-8 animate-bounce-slow'>
    <div class="relative">
      <h1 class='block text-7xl font-bold sm:text-9xl bg-gradient-to-r from-purple-500 to-pink-500 text-transparent bg-clip-text'>404</h1>
      <div class="absolute -top-10 -right-10 rotate-12 text-3xl hidden sm:block">
        <!-- Simple emoji instead of icon -->
        <span class="text-5xl">ğŸ˜¢</span>
      </div>
    </div>
    
    <p class='mt-3 text-xl font-medium text-primary'>{randomMessage}</p>
    <p class='mt-2 text-muted-foreground'>We couldn't find the page you were looking for, but we found the way home!</p>
    
    <div class="mt-8 space-y-4">
      <Button title='Back to Home' href='/' style='ahead' class='px-6 py-3 text-lg hover:scale-105 transition-transform'>
        <!-- Using text instead of icon -->
        ğŸ  Take Me Home
      </Button>
      
      <div class="mt-6 animate-pulse">
        <!-- Simple arrow using HTML entity -->
        <div class="text-3xl text-primary">â†‘</div>
        <p class="text-sm text-muted-foreground">Click the button above to go back!</p>
      </div>
    </div>
  </div>
  
  <style>
    .animate-bounce-slow {
      animation: bounce 3s infinite;
    }
    
    @keyframes bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-15px);
      }
    }
  </style>
</PageLayout>
