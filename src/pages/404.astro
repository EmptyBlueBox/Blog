---
import PageLayout from '@/layouts/BaseLayout.astro'

import { Button } from '@/components/user'

const meta = {
  description: 'Page not found',
  title: '404 - Page Not Found'
}
---

<PageLayout {meta}>
  <div class='px-4 py-16 text-center sm:px-6 lg:px-8'>
    <div class='mx-auto max-w-md'>
      <h1 class='mb-8 text-8xl font-bold text-muted-foreground'>404</h1>

      <h2 class='mb-4 text-2xl font-semibold text-primary'>Page Not Found</h2>
      <p class='mb-8 leading-relaxed text-muted-foreground'>
        The page you are looking for might have been removed, had its name changed, or is
        temporarily unavailable.
      </p>

      <div class='space-y-4'>
        <Button title='Return to Home' href='/' style='ahead' class='px-8 py-3'>
          Return to Home
        </Button>

        <p class='mt-6 text-sm text-muted-foreground'>
          If you believe this is an error, please contact support.
        </p>
      </div>
    </div>
  </div>
</PageLayout>
