---
import PageLayout from '@/layouts/CommonPage.astro'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import links from 'public/links.json'

import Substats from '@/components/about/Substats.astro'
import { Comment } from '@/components/advanced'
import FriendList from '@/components/links/FriendList.astro'
import Sponsors from '@/components/projects/Sponsors.astro'
import { Collapse, Timeline } from '@/components/user'
import alipay from '@/assets/projects/alipay-qrcode.jpg'
import wechat from '@/assets/projects/wechat-qrcode.jpg'
import { integrationConfig } from '@/site-config'

export const prerender = true

const headings = [
  {
    depth: 2,
    slug: 'social-media',
    text: 'Social Medias'
  },
  {
    depth: 2,
    slug: 'common-links',
    text: 'Friend Links'
  },
  {
    depth: 2,
    slug: 'apply-links',
    text: 'Apply for a Friend Link'
  },
  {
    depth: 2,
    slug: 'sponsorship',
    text: 'Sponsorship'
  }
]

const { friends } = links
const linksConfig = integrationConfig.links
---

<PageLayout title='Links' {headings} info='/links'>
  <p>The links are placed randomly~</p>
  <h2 id='social-media'>Social Medias</h2>
  <p>
    Feel free to follow me on these social networks, and don't forget to leave a comment down below
    so I can follow you back!
  </p>
  <div class='flex items-center justify-center gap-x-4 sm:gap-x-4 md:gap-x-7 lg:gap-x-8'>
    <a
      href='mailto:lyt0112@outlook.com'
      target='_blank'
      aria-label='Email'
      class='transition-colors hover:text-primary'
    >
      <Icon name='mail' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://github.com/EmptyBlueBox'
      target='_blank'
      aria-label='GitHub'
      class='transition-colors hover:text-primary'
    >
      <Icon name='github' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://scholar.google.com/citations?user=YtGyys8AAAAJ&hl=en'
      target='_blank'
      aria-label='Google Scholar'
      class='transition-colors hover:text-primary'
    >
      <Icon name='google-scholar' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://www.linkedin.com/in/yutong-liang-0a535030b/'
      target='_blank'
      aria-label='LinkedIn'
      class='transition-colors hover:text-primary'
    >
      <Icon name='linkedin' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://x.com/YutongLiang_'
      target='_blank'
      aria-label='X'
      class='transition-colors hover:text-primary'
    >
      <Icon name='x' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://www.youtube.com/@YutongLiang-y6d'
      target='_blank'
      aria-label='YouTube'
      class='transition-colors hover:text-primary'
    >
      <Icon name='youtube' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://www.instagram.com/yutongliang0112/'
      target='_blank'
      aria-label='Instagram'
      class='transition-colors hover:text-primary'
    >
      <Icon name='instagram' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://space.bilibili.com/214390234'
      target='_blank'
      aria-label='Bilibili'
      class='transition-colors hover:text-primary'
    >
      <Icon name='bilibili' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://www.zhihu.com/people/tardis-77'
      target='_blank'
      aria-label='Zhihu'
      class='transition-colors hover:text-primary'
    >
      <Icon name='zhihu' class='size-6 sm:size-7 md:size-8' />
    </a>
    <a
      href='https://www.worldcubeassociation.org/persons/2017LIAN26'
      target='_blank'
      aria-label='WCA'
      class='transition-colors hover:text-primary'
    >
      <Icon name='wca' class='size-6 sm:size-7 md:size-8' />
    </a>
  </div>

  <p></p>

  <Substats
    stats={[
      {
        platform: 'GitHub',
        icon: 'social.svg#mingcute-github-line',
        link: 'https://github.com/EmptyBlueBox',
        text: 'followers',
        api: 'github/EmptyBlueBox'
      },
      {
        platform: 'X',
        icon: 'social.svg#mingcute-x-line',
        link: 'https://x.com/YutongLiang_',
        text: 'followers',
        api: 'x/YutongLiang_',
        count: 24
      },
      {
        platform: 'Zhihu',
        icon: 'social.svg#ri-zhihu-line',
        color: '#0084ff',
        link: 'https://www.zhihu.com/people/tardis-77',
        text: 'followers',
        api: 'zhihu/tardis-77',
        count: 590
      },
      {
        platform: 'Bilibili',
        icon: 'social.svg#ri-bilibili-line',
        color: '#fe7398',
        link: 'https://space.bilibili.com/214390234',
        text: 'fans',
        api: '214390234'
      }
    ]}
  />

  <p></p>
  <h2 id='common-links'>Friend Links</h2>
  <FriendList list={friends[0]} />

  <Collapse title='Link History Book'>
    <Timeline events={linksConfig.logbook} />
  </Collapse>

  <!-- <Collapse title='Inactive Friend Links'>
    <FriendList list={friends[1]} />
  </Collapse> -->

  <!-- <FriendList list={friends[2]} title='Special Links' /> -->

  <!-- apply-links -->
  <h2 id='apply-links'>Apply for a Friend Link</h2>
  <div class='mt-4 overflow-hidden rounded-lg border bg-card p-4'>
    <div class='flex flex-col gap-4'>
      <div class='flex items-center justify-between gap-4'>
        <div class='flex items-center gap-4'>
          <span class='w-32 shrink-0 text-right font-medium text-muted-foreground'>Name:</span>
          <span id='link-name'>{linksConfig.applyTip.name}</span>
        </div>
        <button
          class='copy-btn group rounded p-1.5 transition-colors hover:bg-muted'
          data-clipboard-target='#link-name'
          title='Copy name'
        >
          <svg class='size-4 text-muted-foreground transition-transform group-hover:scale-110'>
            <use href='/icons/copyright-sponsor.svg#mingcute-link-2-line'></use>
          </svg>
        </button>
      </div>
      <div class='flex items-center justify-between gap-4'>
        <div class='flex items-center gap-4'>
          <span class='w-32 shrink-0 text-right font-medium text-muted-foreground'
            >Introduction:</span
          >
          <span id='link-desc'>{linksConfig.applyTip.desc}</span>
        </div>
        <button
          class='copy-btn group rounded p-1.5 transition-colors hover:bg-muted'
          data-clipboard-target='#link-desc'
          title='Copy introduction'
        >
          <svg class='size-4 text-muted-foreground transition-transform group-hover:scale-110'>
            <use href='/icons/copyright-sponsor.svg#mingcute-link-2-line'></use>
          </svg>
        </button>
      </div>
      <div class='flex items-center justify-between gap-4'>
        <div class='flex items-center gap-4'>
          <span class='w-32 shrink-0 text-right font-medium text-muted-foreground'>Website:</span>
          <span id='link-url' class='break-all'>{linksConfig.applyTip.url}</span>
        </div>
        <button
          class='copy-btn group rounded p-1.5 transition-colors hover:bg-muted'
          data-clipboard-target='#link-url'
          title='Copy website URL'
        >
          <svg class='size-4 text-muted-foreground transition-transform group-hover:scale-110'>
            <use href='/icons/copyright-sponsor.svg#mingcute-link-2-line'></use>
          </svg>
        </button>
      </div>
      <div class='flex items-center justify-between gap-4'>
        <div class='flex items-center gap-4'>
          <span class='w-32 shrink-0 text-right font-medium text-muted-foreground'>Avatar:</span>
          <span id='link-avatar' class='break-all'>{linksConfig.applyTip.avatar}</span>
        </div>
        <button
          class='copy-btn group rounded p-1.5 transition-colors hover:bg-muted'
          data-clipboard-target='#link-avatar'
          title='Copy avatar URL'
        >
          <svg class='size-4 text-muted-foreground transition-transform group-hover:scale-110'>
            <use href='/icons/copyright-sponsor.svg#mingcute-link-2-line'></use>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <p>Friend Link Application Instructions:</p>
  <ul>
    <li>Add this site as one of your friend links.</li>
    <li>Ensure your site is activated.</li>
    <li>
      Contact me via my <a href='mailto:lyt0112@outlook.com' target='_blank'>email</a> or comment on
      this page!
    </li>
  </ul>

  <!-- sponsorship -->
  <h2 id='sponsorship'>Sponsorship</h2>
  <p>
    Please do leave a message or contact me via my <a
      href='mailto:lyt0112@outlook.com'
      target='_blank'>email</a
    > after sponsorship!
  </p>
  <Collapse title='Scan to Donate'>
    <div class='flex flex-col justify-center gap-4 sm:flex-row'>
      {
        [
          { name: 'WeChat', icon: 'mingcute-wechat-pay-line', image: wechat },
          { name: 'Alipay', icon: 'mingcute-alipay-line', image: alipay }
        ].map((item) => (
          <div class='group relative justify-center overflow-hidden rounded-xl border bg-white dark:bg-muted'>
            <div class='absolute bottom-0 end-0 start-0 top-0 flex items-center justify-center transition-opacity group-hover:opacity-0'>
              <svg class='size-20'>
                <use href={`/icons/copyright-sponsor.svg#${item.icon}`} />
              </svg>
            </div>
            <Image
              class='mx-auto my-0 max-w-60 opacity-30 blur-sm transition-opacity group-hover:opacity-100 group-hover:blur-none'
              src={item.image}
              alt={item.name}
              loading='lazy'
            />
          </div>
        ))
      }
    </div>
  </Collapse>
  <p>Thanks to the following sponsors, wish you all the best!</p>
  <Sponsors
    sponsors={[
      { name: 'å›', amount: 'CNY 100.00', date: '2025-02-05' },
      { name: 'Jaspeco.sea', amount: 'CNY 20.00', date: '2024-11-14' }
    ]}
  />

  <Comment slot='bottom' />
</PageLayout>

<script>
  import { showToast } from '@/utils/toast'

  document.addEventListener('DOMContentLoaded', () => {
    const copyButtons = document.querySelectorAll('.copy-btn')

    copyButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const targetId = button.getAttribute('data-clipboard-target')
        if (targetId) {
          const targetElement = document.querySelector(targetId)
          if (targetElement) {
            navigator.clipboard.writeText(targetElement.textContent || '').then(
              () => {
                showToast({ message: 'Copied to clipboard!' })
              },
              (err) => {
                console.error('Could not copy text: ', err)
                showToast({ message: 'Failed to copy' })
              }
            )
          }
        }
      })
    })
  })
</script>
