---
import PageLayout from '@/layouts/BaseLayout.astro'

import { Button } from '@/components/user'
import { terms } from '@/site-config'

const meta = {
  title: 'Site policy',
  description: 'Site policy documentation'
}
---

<PageLayout {meta}>
  <div class='w-full'>
    <Button title='Back' href='/' style='back' />
    <h1 id='content-header' class='animate mb-6 mt-6 text-3xl font-medium sm:mt-10'>Site policy</h1>

    <!-- <p class='text-lg font-medium text-foreground'>{terms.title}</p> -->
    <ul class='ms-5 flex list-disc flex-col gap-y-1'>
      {
        terms.list.map((item) => (
          <li>
            <a href={item.link} class='block text-foreground'>
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</PageLayout>
